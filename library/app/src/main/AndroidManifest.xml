<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.longzhiye.android.demo">


    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.activity.net.NetActivity" />

        <activity android:name=".ui.activity.titlebar.TitleBarActivity" />

        <activity android:name=".ui.activity.pulltorefresh.PulltorefreshActivity" />
        <activity android:name=".ui.activity.pulltorefresh.PullListViewActivity" />
        <activity android:name=".ui.activity.pulltorefresh.PullGridViewActivity" />
        <activity android:name=".ui.activity.pulltorefresh.PullScrollViewActivity" />
        <activity android:name=".ui.activity.pulltorefresh.PullReyclerViewActivity" />

        <activity android:name=".ui.activity.selectimg.SelectImgActivity" />
    </application>

</manifest>
